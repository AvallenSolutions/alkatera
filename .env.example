# Supabase Configuration
# Get these values from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
# Google Maps API Configuration
# Get your API key from: https://console.cloud.google.com/apis/credentials
# Required for: Origin location autocomplete, supply chain map, water risk map
# Note: Also exposed to client-side via next.config.js env alias (no NEXT_PUBLIC_ needed)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# OpenLCA Server Configuration (REST API via gdt-server)
# Connects to cloud-hosted OpenLCA server for ecoinvent LCA calculations
# For local development: http://localhost:8080
# For production: https://openlca.alkatera.com
OPENLCA_SERVER_URL=https://openlca.alkatera.com
OPENLCA_SERVER_ENABLED=true
# API key for authenticating with the OpenLCA server (required for cloud deployment)
OPENLCA_API_KEY=your_openlca_api_key_here

# Agribalyse OpenLCA Server Configuration (optional)
# Separate gdt-server instance hosting Agribalyse 3.2 database
# For local development: http://localhost:8081
# For production: https://openlca-agribalyse.alkatera.com
OPENLCA_AGRIBALYSE_SERVER_URL=
OPENLCA_AGRIBALYSE_API_KEY=

# Resend Email Configuration
# Get your API key from: https://resend.com/api-keys
# Required for: Contact form notifications, supplier invitation emails, blog post notifications
# Note: You must verify alkatera.com domain in Resend dashboard for production
RESEND_API_KEY=your_resend_api_key_here

# Sender.net API Configuration
# Get your API access token from: https://app.sender.net/settings/tokens
# Required for: Contact form submissions and mailing list subscriptions
SENDER_API_TOKEN=your_sender_api_token_here

# Site URL Configuration
# Set this to your production domain for proper Stripe redirects
# For production: https://www.alkatera.com
# For development: http://localhost:3000
NEXT_PUBLIC_SITE_URL=https://www.alkatera.com

# Stripe Payment Configuration
# Get your API keys from: https://dashboard.stripe.com/apikeys
# Required for: Subscription billing and payment processing
# Production keys provided - set these in your deployment environment
STRIPE_SECRET_KEY=your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# PDFShift API Configuration
# Get your API key from: https://app.pdfshift.io
# Required for: LCA report PDF generation
PDFSHIFT_API_KEY=your_pdfshift_api_key_here

# Skywork AI Document Generation Configuration
# Get your credentials from: https://skywork.ai (Developer Platform)
# Required for: AI-powered sustainability report generation (Word, Excel, PowerPoint)
# This service generates professional documents based on platform data
SKYWORK_SECRET_ID=your_skywork_secret_id_here
SKYWORK_SECRET_KEY=your_skywork_secret_key_here
SKYWORK_API_URL=https://api.skywork.ai
